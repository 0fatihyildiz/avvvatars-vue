{
  "author": "Fatih Yildiz",
  "name": "avvvatars-vue",
  "version": "1.0.2",
  "description": "generates unique placeholder avatars with either characters or shapes for your vue project",
  "keywords": [
    "placeholder avatars",
    "avatars",
    "vue",
    "random avatar"
  ],
  "homepage": "https://github.com/productdevbookcom/avvvatars-vue",
  "bugs": "https://github.com/productdevbookcom/avvvatars-vue/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/productdevbookcom/avvvatars-vue.git"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.0.0",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "types": "./dist/index.d.ts"
    },
    "./style": "./dist/style.css"
  },
  "main": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "vite build --mode production",
    "dev": "vite",
    "prepublishOnly": "pnpm run build",
    "release": "pnpm build && bumpp --commit --push --tag && pnpm publish",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx .",
    "lint:fix": "eslint --ext .ts,.tsx,.js,.jsx . --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage"
  },
  "license": "MIT",
  "peerDependencies": {
    "vue": "=>3.2.47"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.8.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/coverage-v8": "^1.3.1",
    "@vue-macros/volar": "^0.16.0",
    "@vue/test-utils": "^2.4.1",
    "bumpp": "^9.2.0",
    "eslint": "^8.50.0",
    "jsdom": "^24.0.0",
    "typescript": "^5.2.2",
    "unplugin-vue-macros": "^2.6.1",
    "vite": "^5.1.5",
    "vite-plugin-dts": "^3.6.0",
    "vitest": "^1.3.1",
    "vue": "^3.3.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
